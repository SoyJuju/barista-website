  'Cup Size - 700 ml',
  'Milk Powder - 30 grams',
  'Taro Powder - 25 grams',
  'Hot Water - 80 grams',
  'Milk - 50 to 80 grams',
  'Frappe Sauce - 10 grams',
  'Ice - 300 grams',
  'Cheese Powder - 35 grams',
  'Long Beach Cheese Powder - 20 grams',
