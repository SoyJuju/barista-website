---
import Recipes from '../../layouts/Recipes.astro';
import RecipeList from '../../components/Main/Recipes';

import PassionLemonTea from '../../assets/recipe_tag/passin lemon tea.jpg';

const Ingredients = [
  'Cup Size - 700 ml',
  'Lipton Tea - 2 bags',
  'Hot Water - 200 grams',
  'Ice - 200 to 250 grams',
  'Lime - 30 grams',
  'DF Passion - 20 grams',
  'Sugar Syrup - 20 grams',
];

const Directions = [
  'Dip the 2 tea bags in the hot water',
  'Add all the ingredients along with the dipped hot water into a shaker',
  'Pour the contents of the shaker into the specified cup and add ice',
];
---

<Recipes title="Passion Lemon Tea Recipe" image={PassionLemonTea.src}>
  <RecipeList Ingredients={Ingredients} Directions={Directions} />
</Recipes>
