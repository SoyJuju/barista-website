---
import Recipes from '../../layouts/Recipes.astro';
import RecipeList from '../../components/Main/Recipes';

import BrewedAmericano from '../../assets/recipe_tag/brew americano.jpg';

const Ingredients = [
  'Cup Size - 8 ounces',
  'Coffee Roast - Medium Roast',
  'Coffee - 20 grams',
  'Water - 200 grams',
];

const Directions = [
  'Add water and the grinded coffee grounds into the coffee maker',
  'The output will be 50 grams less than the water added',
  'Pour the contents of the coffee maker into a cup',
];
---

<Recipes title="Brew Americano Recipe" image={BrewedAmericano.src}>
  <RecipeList Ingredients={Ingredients} Directions={Directions} />
</Recipes>
