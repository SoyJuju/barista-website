---
import Recipes from '../../layouts/Recipes.astro';
import RecipeList from '../../components/Main/Recipes';

import IceMochaBlended from '../../assets/recipe_tag/blended mocha.jpg';

const Ingredients = [
  '<a href="/HotCoffee/espresso">Double Shot Espresso</a>',
  'Cup Size - 360 ml',
  'Vanilla Frappe Powder - 15 grams',
  'Choco Powder - 10 grams',
  'Coco Powder - 5 grams',
  'Evaporated Milk - 30 grams',
  'Sugar Syrup - 20 grams',
  'Ice - 200 grams',
  'Whipped Cream Optional',
];

const Directions = [
  'Add all the ingredients into a blender',
  'Blend them until the ice is into small bits but not dissolved',
  'Pour the contents into a specifed cup',
  'Add whipped cream as topping if wanted',
];
---

<Recipes title="Iced Mocha Blended Recipe" image={IceMochaBlended.src}>
  <RecipeList Ingredients={Ingredients} Directions={Directions} />
</Recipes>
