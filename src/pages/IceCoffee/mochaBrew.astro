---
import Recipes from '../../layouts/Recipes.astro';
import RecipeList from '../../components/Main/Recipes';

import BrewMocha from '../../assets/recipe_tag/mocha brew.jpg';

const Ingredients = [
  'Cup Size - 360 ml',
  'Coffee - 25 grams',
  'Water - 150 grams',
  'Choco Powder - 10 grams',
  'Coco Powder - 5 grams',
  'Milk Powder - 30 grams',
  'Frappe Sauce - 10 grams',
  'Sugar Syrup - 5 grams',
  'Ice - 100 grams',
];

const Directions = [
  'Add water and the grinded coffee grounds into the coffee maker',
  'The output will be 50 grams less than the water added',
  'Mix 5 grams of condensed milk and 5 grams of evaporated milk to make the frappe sauce',
  'In a separate cup add milk powder, choco powder, coco powder, frappe sauce, and sugar syrup',
  'Mix the items in the cup with the output of the coffee maker and add ice',
];
---

<Recipes title="Iced Brew Mocha Recipe" image={BrewMocha.src}>
  <RecipeList Ingredients={Ingredients} Directions={Directions} />
</Recipes>
